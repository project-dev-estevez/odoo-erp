<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_reset_password_email_custom" model="ir.ui.view">
        <field name="name">auth_signup.reset_password_email_custom</field>
        <field name="model">mail.template</field>
        <field name="inherit_id" ref="auth_signup.reset_password_email"/>
        <field name="arch" type="xml">
            <xpath expr="//table[@style='padding: 16px; background-color: #FFFFFF; color: #454748; border-collapse:separate;']" position="replace">
                <table border="0" cellpadding="0" cellspacing="0" style="padding: 16px; background-color: #FFFFFF; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <tr>
                        <td align="center">
                            <h1>Hola Mundo</h1>
                        </td>
                    </tr>
                </table>
            </xpath>
        </field>
    </record>
</odoo>