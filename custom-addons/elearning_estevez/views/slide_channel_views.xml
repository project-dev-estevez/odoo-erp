<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_slide_channel_form_inherit" model="ir.ui.view">
        <field name="name">slide.channel.form.inherit</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
        <field name="arch" type="xml">   
            <xpath expr="//field[@name='tag_ids']" position="after">
                <div class="row mt16">
                    <div class="col-lg-6">                        
                        <group>
                            <field name="tipo_agente" string="Tipo Agente"/>
                            <field name="modalidad" string="Modalidad" />
                        </group>
                    </div>
                    <div class="col-lg-6">
                        <group>
                            <field name="representante_patron" widget="many2one"/>
                            <field name="representante_trabajadores" widget="many2one"/>
                            <field name="instructor" widget="many2one"/>
                        </group>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="replace">
            <field name="user_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>