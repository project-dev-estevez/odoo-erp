<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit_courses" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.courses</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
                        
            <xpath expr="//notebook/page[@name='assignments']" position="after">
                <page name="courses" string="Cursos">                    
                                        
                    <field name="course_ids">
                        <list>
                            <field name="name" string="Nombre del Curso" width="250"/>                              
                            <field name="channel_type" string="Tipo" width="200"/>   
                            <field name="modalidad" string="Modalidad" width="200"/>  
                            <field name="write_date" string="Fecha de Inicio" width="200"/>
                            <field name="completion" string="Porcentaje Completado" width="200"/>                           
                            <button name="generate_course_certificate" string="Generar Certificado" type="object" class="btn-primary"/>
                        </list>
                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>