<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_course_certificate_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">

                        <!-- ENCABEZADO -->
                        <div class="row align-items-center">
                            <div class="col text-center text-purple">
                                <div class="fw-bold fs-5 mb-0">FORMATO DC-3</div>
                                <div class="fw-bold fs-6 mt-1">CONSTANCIA DE COMPETENCIAS O DE HABILIDADES LABORALES</div>
                            </div>
                        </div>

                        <div class="container my-2">

                            <!-- DATOS DEL TRABAJADOR -->
                            <table class="table table-borderless border-dark align-middle small mb-2">
                                <thead>
                                    <tr>
                                        <th colspan="2" class="fw-bold text-center text-secondary">DATOS DEL TRABAJADOR</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Nombre y Folio -->
                                    <tr>
                                        <td class="w-75">
                                            <strong>Nombre (Apellido paterno, materno y nombre(s))</strong>
                                            <div class="mt-1 p-1 border-bottom"></div>
                                        </td>
                                        <td class="w-25 text-end">
                                            <strong>Folio:</strong>
                                            <span class="d-inline-block border border-dark px-2 py-0 fw-bold ms-1"></span>
                                        </td>
                                    </tr>

                                    <!-- CURP y Ocupación -->
                                    <tr>
                                        <td class="w-60">
                                            <strong>Clave Única de Registro de Población</strong>
                                            <div class="d-flex flex-wrap gap-1 mt-1">
                                                <!-- 16 casillas -->
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                            </div>
                                        </td>
                                        <td class="w-40">
                                            <strong>Ocupación específica (Catálogo Nacional de Ocupaciones)</strong>
                                            <div class="mt-1 p-1 border-bottom"></div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- DATOS DE LA EMPRESA -->
                            <table class="table table-borderless border-dark small mb-2">
                                <thead>
                                    <tr>
                                        <th colspan="2" class="fw-bold text-center text-secondary">DATOS DE LA EMPRESA</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Nombre -->
                                    <tr>
                                        <td colspan="2">
                                            <div><b>Nombre o razón social</b> (En caso de persona física, anotar apellido paterno, apellido materno y nombre(s))</div>
                                            <div class="mt-1 p-1 border-bottom"></div>
                                        </td>
                                    </tr>
                                    <!-- RFC y Registro patronal -->
                                    <tr>
                                        <td class="w-50">
                                            <b>Registro Federal de Contribuyentes con homoclave (SHCP)</b>
                                            <div class="d-flex flex-wrap gap-1 mt-1">
                                                <!-- 13 casillas -->
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                            </div>
                                        </td>
                                        <td class="w-50">
                                            <b>Registro patronal ante el I.M.S.S.</b>
                                            <div class="d-flex flex-wrap gap-1 mt-1">
                                                <!-- 11 casillas -->
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                                <span class="border border-dark d-inline-block" style="width:18px; height:18px;"></span>
                                            </div>
                                        </td>
                                    </tr>
                                    <!-- Actividad -->
                                    <tr>
                                        <td colspan="2">
                                            <b>Actividad o giro principal:</b>
                                            <div class="mt-1 p-1 border-bottom"></div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- PROGRAMA DE CAPACITACIÓN -->
                            <table class="table table-borderless small mb-1">
                                <thead>
                                    <tr>
                                        <th colspan="12" class="fw-bold text-center text-secondary">
                                            DATOS DEL PROGRAMA DE CAPACITACIÓN, ADIESTRAMIENTO Y PRODUCTIVIDAD
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Nombre del curso -->
                                    <tr>
                                        <td colspan="12"><b>Nombre del curso</b></td>
                                    </tr>
                                    <tr>
                                        <td colspan="12">DC3 Inducción a la Seguridad e Higiene</td>
                                    </tr>

                                    <!-- Duración y periodo -->
                                    <tr>
                                        <td rowspan="2" colspan="2"><b>Duración en horas</b><br/>8 horas</td>
                                        <td rowspan="2" colspan="2"><b>Periodo de ejecución</b></td>
                                        <td colspan="4" class="text-center"><b>Año</b></td>
                                        <td colspan="2" class="text-center"><b>Mes</b></td>
                                        <td colspan="2" class="text-center"><b>Día</b></td>
                                    </tr>
                                    <tr>
                                        <td class="text-center">2</td>
                                        <td class="text-center">0</td>
                                        <td class="text-center">2</td>
                                        <td class="text-center">5</td>
                                        <td class="text-center">0</td>
                                        <td class="text-center">8</td>
                                        <td class="text-center">0</td>
                                        <td class="text-center">8</td>
                                    </tr>

                                    <!-- Área temática -->
                                    <tr>
                                        <td colspan="12"><b>Área temática del curso:</b> 006</td>
                                    </tr>

                                    <!-- Agente capacitador -->
                                    <tr>
                                        <td colspan="12"><b>Agente Capacitador (Externo o Interno según corresponda):</b><br/>
                                            Estevez Jor Servicios, S.A de C.V. Reg. STPS: ESE-111012-E79-0013
                                        </td>
                                    </tr>

                                    <!-- Texto legal -->
                                    <tr>
                                        <td colspan="12" class="text-center small">
                                            Los datos se asientan en esta constancia bajo protesta de decir verdad,
                                            apercibidos de la responsabilidad en que incurre todo aquel que no se conduce con verdad.
                                        </td>
                                    </tr>

                                    <!-- Firmas -->
                                    <tr>
                                        <td colspan="4" class="text-center p-2">
                                            <div class="border-top w-75 mx-auto mb-1 mt-4"></div>
                                            Capacitador<br/>
                                            <span class="small">Nombre y firma</span>
                                        </td>
                                        <td colspan="4" class="text-center p-2">
                                            <div class="border-top w-75 mx-auto mb-1 mt-4"></div>
                                            Patrón o representante<br/>
                                            <span class="small">Nombre y firma</span>
                                        </td>
                                        <td colspan="4" class="text-center p-2">
                                            <div class="border-top w-75 mx-auto mb-1 mt-4"></div>
                                            Representante de los trabajadores<br/>
                                            <span class="small">Nombre y firma</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>

                </t>
            </t>
        </t>
    </template>

    <record id="action_report_course_certificate" model="ir.actions.report">
        <field name="name">Certificado de Curso</field>
        <field name="model">slide.channel</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_elearning_integration.report_course_certificate_document</field>
        <field name="report_file">hr_elearning_integration.report_course_certificate_document</field>
        <field name="print_report_name">'Certificado de Curso - %s' % (object.name)</field>
    </record>

</odoo>
