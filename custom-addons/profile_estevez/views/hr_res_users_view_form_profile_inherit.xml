<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista heredada para ajustes en el formulario de usuario -->
    <record id="hr_res_users_view_form_profile_inherit_adjustments" model="ir.ui.view">
        <field name="name">hr.res.users.view.form.profile.inherit.adjustments</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="hr.res_users_view_form_profile"/>
        <field name="arch" type="xml">

            <!-- Imagen de usuario más grande, centrada y no editable usando Bootstrap -->
            <xpath expr="//field[@name='image_1920']" position="replace">
                <div class="d-flex flex-column align-items-center mb-3">
                    <field name="image_1920" widget="image" class="img-fluid rounded mb-2" style="max-width: 220px;" options='{"zoom": true, "preview_image":"avatar_128"}' readonly="1"/>
                    <div class="mt-2 fw-bold fs-4">
                        Número Empleado: <field name="employee_number_display" readonly="1"/>
                    </div>
                </div>
            </xpath>
            <!-- Nombre de empleado centrado y alineado debajo de la imagen -->
            <xpath expr="//div[@class='oe_title']" position="replace">
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Employee's Name" required="True" readonly="context.get('from_my_profile', False)"/>
                    </h1>
                </div>
            </xpath>
            <!-- Job title heredado -->
            <xpath expr="//div[@class='row']/h2/field[@name='job_title']" position="replace">
                <h2 class="col-lg-6 ps-lg-3">
                    <field name="job_title" class="no-premium-input w-100" placeholder="Job Position" readonly="True"/>
                </h2>
            </xpath>

            <xpath expr="//group[group/field[@name='mobile_phone']]" position="replace">
                <group>
                    <group>
                        <field name="can_edit" invisible="1"/>
                        <field name="mobile_phone" widget="phone" readonly="not can_edit" invisible="1"/>
                        <field name="work_phone" widget="phone"/>
                        <field name="work_location_id" readonly="True"/>
                        <field name="coach_id" readonly="True"/>      
                    </group>
                    <group>
                        <field name="work_email" string="Correo laboral" widget="email"/>
                        <field name="employee_parent_id" string="Jefe inmediato" readonly="True"/>
                        <field name="employee_project_name" string="Proyecto" readonly="True"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                </group>
            </xpath>
            <!-- Agregar botones inteligentes WhatsApp y Documentos al toolbar -->
            <!-- <xpath expr="//div[@name='button_box']/button[last()]" position="after">
                <button name="action_open_employee_documents" class="oe_stat_button" icon="fa-file-text-o" type="object" string="Documentos"/>
            </xpath> -->
        </field>
    </record>

    <record id="hr_res_users_view_form_profile_inherit" model="ir.ui.view">
        <field name="name">hr.res.users.view.form.profile.inherit.profile.estevez</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="hr_attendance.hr_user_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_last_month_attendances']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
