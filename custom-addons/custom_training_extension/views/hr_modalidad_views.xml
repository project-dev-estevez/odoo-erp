<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_modalidad" model="ir.actions.act_window">
        <field name="name">Informaci√≥n</field>
        <field name="res_model">hr.modalidad</field>
        <field name="view_mode">list</field>
    </record>
    
    <record id="view_hr_modalidad_list" model="ir.ui.view">
        <field name="name">hr.modalidad.list</field>
        <field name="model">hr.modalidad</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_hr_modalidad_form" model="ir.ui.view">
        <field name="name">hr.modalidad.form</field>
        <field name="model">hr.modalidad</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>