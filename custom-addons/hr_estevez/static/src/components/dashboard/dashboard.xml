<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="hr_estevez.HREmployeesDashboard" owl="1">
        <div class="hr_employees_dashboard">
            <!-- Header del Dashboard -->
            <div class="dashboard-header">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="dashboard-title">
                        <i class="fa fa-users me-2"></i>
                        Dashboard de Empleados
                    </h2>
                    <button class="btn btn-primary" t-on-click="refreshDashboard">
                        <i class="fa fa-refresh me-1"></i>
                        Actualizar
                    </button>
                </div>
            </div>

            <!-- Loading State -->
            <div t-if="state.loading" class="text-center p-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="mt-2">Cargando datos del dashboard...</p>
            </div>

            <!-- Dashboard Content -->
            <div t-else="" class="dashboard-content">
                <!-- Tarjetas de Estadísticas Principales -->
                <div class="row mb-4">
                    <div class="col-xl-3 col-md-6 mb-3">
                        <div class="card stat-card stat-card-primary" t-on-click="openEmployeesList">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title text-primary" t-esc="state.totalEmployees"/>
                                        <p class="card-text">Total Empleados</p>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fa fa-users fa-2x text-primary"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-3">
                        <div class="card stat-card stat-card-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title text-success" t-esc="state.activeEmployees"/>
                                        <p class="card-text">Empleados Activos</p>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fa fa-user-check fa-2x text-success"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-3">
                        <div class="card stat-card stat-card-warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title text-warning" t-esc="state.inactiveEmployees"/>
                                        <p class="card-text">Empleados Inactivos</p>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fa fa-user-times fa-2x text-warning"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-3">
                        <div class="card stat-card stat-card-info">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title text-info" t-esc="state.newEmployeesThisMonth"/>
                                        <p class="card-text">Nuevos Este Mes</p>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fa fa-user-plus fa-2x text-info"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Segunda fila de estadísticas -->
                <div class="row mb-4">
                    <!-- Distribución por Departamentos -->
                    <div class="col-lg-6 mb-3">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-building me-2"></i>
                                    Por Departamentos
                                </h5>
                                <button class="btn btn-sm btn-outline-primary" t-on-click="openDepartmentsList">
                                    Ver Todos
                                </button>
                            </div>
                            <div class="card-body">
                                <div t-if="state.departmentData.length === 0" class="text-center py-3">
                                    <p class="text-muted">No hay datos de departamentos</p>
                                </div>
                                <div t-else="">
                                    <div t-foreach="state.departmentData.slice(0, 5)" t-as="dept" t-key="dept.name" class="mb-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span t-esc="dept.name"/>
                                            <span class="badge bg-primary" t-esc="dept.count"/>
                                        </div>
                                        <div class="progress mt-1" style="height: 5px;">
                                            <div class="progress-bar" 
                                                 t-att-style="'width: ' + (state.departmentData.length ? (dept.count / state.departmentData[0].count * 100) : 0) + '%'"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Distribución por Áreas -->
                    <div class="col-lg-6 mb-3">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-sitemap me-2"></i>
                                    Por Áreas
                                </h5>
                            </div>
                            <div class="card-body">
                                <div t-if="state.areaData.length === 0" class="text-center py-3">
                                    <p class="text-muted">No hay datos de áreas</p>
                                </div>
                                <div t-else="">
                                    <div t-foreach="state.areaData.slice(0, 5)" t-as="area" t-key="area.name" class="mb-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span t-esc="area.name"/>
                                            <span class="badge bg-info" t-esc="area.count"/>
                                        </div>
                                        <div class="progress mt-1" style="height: 5px;">
                                            <div class="progress-bar bg-info" 
                                                 t-att-style="'width: ' + (state.areaData.length ? (area.count / state.areaData[0].count * 100) : 0) + '%'"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tercera fila -->
                <div class="row mb-4">
                    <!-- Próximos Cumpleaños -->
                    <div class="col-lg-6 mb-3">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-birthday-cake me-2"></i>
                                    Próximos Cumpleaños
                                </h5>
                            </div>
                            <div class="card-body">
                                <div t-if="state.upcomingBirthdays.length === 0" class="text-center py-3">
                                    <p class="text-muted">No hay cumpleaños próximos</p>
                                </div>
                                <div t-else="">
                                    <div t-foreach="state.upcomingBirthdays" t-as="emp" t-key="emp.id" class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <strong t-esc="emp.name"/>
                                            <br/>
                                            <small class="text-muted" t-esc="emp.birthday"/>
                                        </div>
                                        <i class="fa fa-gift text-warning"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contratos por Vencer -->
                    <div class="col-lg-6 mb-3">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-file-contract me-2"></i>
                                    Contratos por Vencer
                                </h5>
                                <button class="btn btn-sm btn-outline-primary" t-on-click="openContractsList">
                                    Ver Todos
                                </button>
                            </div>
                            <div class="card-body">
                                <div t-if="state.contractsExpiring.length === 0" class="text-center py-3">
                                    <p class="text-muted">No hay contratos próximos a vencer</p>
                                </div>
                                <div t-else="">
                                    <div t-foreach="state.contractsExpiring" t-as="contract" t-key="contract.id" class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <strong t-esc="contract.employee_id[1]"/>
                                            <br/>
                                            <small class="text-muted">Vence: <span t-esc="contract.date_end"/></small>
                                        </div>
                                        <i class="fa fa-exclamation-triangle text-danger"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estadísticas de Contratos -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-chart-pie me-2"></i>
                                    Tipos de Contratos
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-md-4">
                                        <div class="contract-stat">
                                            <h3 class="text-success" t-esc="state.contractStats.fixed"/>
                                            <p>Contratos Fijos</p>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="contract-stat">
                                            <h3 class="text-primary" t-esc="state.contractStats.indefinite"/>
                                            <p>Contratos Indefinidos</p>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="contract-stat">
                                            <h3 class="text-warning" t-esc="state.contractStats.temporary"/>
                                            <p>Contratos Temporales</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
