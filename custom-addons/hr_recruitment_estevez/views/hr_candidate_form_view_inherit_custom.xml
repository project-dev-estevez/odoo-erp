<odoo>
  <data>
    <record id="candidate_forms" model="ir.ui.view">
      <field name="name">hr.candidate.view.form.inherit.placeholder</field>
      <field name="model">hr.candidate</field>
      <field name="inherit_id" ref="hr_recruitment.hr_candidate_view_form"/>
      <field name="arch" type="xml">              

        <!-- Ocultar partner_id -->
        <field name="partner_id" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
        <field name="linkedin_profile" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>

        <!-- Mostrar los campos personalizados junto a los demás campos del formulario -->
        <field name="email_from" position="before">
          <field name="first_name"/>
          <field name="last_name"/>
          <field name="mother_last_name"/>
        </field>        

         <xpath expr="//field[@name='job_id']" position="after">
         <div class="d-flex justify-content-end w-100 mt-4">
          <button              
            name="action_save" 
            type="object" 
            string="Guardar"
            class="btn-primary"     
            confirm="¿Estás seguro de que deseas guardar un nuevo candidato?"                    
            />        
          </div>
          </xpath>
      </field>
    </record>    
  </data>
</odoo>
