<odoo>
  <data>
    <record id="hr_applicant_view_form_inherit_candidate_restriction" model="ir.ui.view">
      <field name="name">hr.applicant.form.inherit.disable.create.candidate</field>
      <field name="model">hr.applicant</field>
      <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
      <field name="arch" type="xml">

        <!-- Reemplazamos el campo candidate_id para poner opciones sin crear ni editar -->
        <field name="candidate_id" position="replace">
          <field name="candidate_id" options="{'no_create': True, 'no_create_edit': True}"/>
        </field>
         <field name="source_id" position="replace">
          <field name="source_id" string="Fuente de reclutamiento" options="{'no_create': True, 'no_create_edit': True}"/>
        </field>
        <field name="project_id" position="replace">
          <field name="project_id" options="{'no_create': True, 'no_create_edit': True}"/>
        </field>
        <field name="job_id" position="replace">
          <field name="job_id" options="{'no_create': True, 'no_create_edit': True}"/>
        </field>
        <field name="user_id" position="replace">
          <field name="user_id" options="{'no_create': True, 'no_create_edit': True}"/>
        </field>
        <xpath expr="//field[@name='linkedin_profile']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
