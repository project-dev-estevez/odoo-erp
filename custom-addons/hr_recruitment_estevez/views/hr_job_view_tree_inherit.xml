<odoo>
<record id="hr_job_view_tree_inherit" model="ir.ui.view">
    <field name="name">hr.job.tree.inherit</field>
    <field name="model">hr.job</field>
    <field name="inherit_id" ref="hr.view_hr_job_tree"/>
    <field name="arch" type="xml">        
        <xpath expr="//field[@name='name']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>        
        <xpath expr="//field[@name='area_id']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
        <xpath expr="//field[@name='department_id']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
        <xpath expr="//field[@name='no_of_recruitment']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
        <xpath expr="//field[@name='application_count']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
        <xpath expr="//field[@name='no_of_employee']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
        <xpath expr="//field[@name='expected_employees']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
        <xpath expr="//field[@name='no_of_hired_employee']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
        <xpath expr="//field[@name='company_id']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
        <xpath expr="//field[@name='is_published']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
        <xpath expr="//field[@name='alias_id']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
        <xpath expr="//field[@name='user_id']" position="attributes">
            <attribute name="width">300</attribute>
        </xpath>
       
    </field>
</record>
</odoo>