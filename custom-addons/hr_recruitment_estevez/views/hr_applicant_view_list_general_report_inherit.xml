<odoo>
  <!-- Vista lista personalizada -->
  <record id="hr_applicant_list_custom" model="ir.ui.view">
    <field name="name">hr.applicant.list.custom</field>
    <field name="model">hr.applicant</field>
    <field name="arch" type="xml">
      <list string="General Postulantes" default_order="create_date desc">
        <field name="create_date" string="Fecha y Hora" width="200"/>
        <field name="user_id" string="Reclutador" width="250" widget="many2one_avatar_user"/>
        <field name="partner_name" string="Candidato" width="250"/>
        <field name="job_id" string="Puesto de Trabajo" width="220"/>
        <field name="project_id" string="Proyecto" optional="hide" width="220"/>
        <field name="source_id" string="Fuente de Reclutamiento" optional="hide" width="180"/>
        <field name="stage_id" string="Etapa Actual" optional="hide" width="170"/>
        <field name="date_closed" string="Fecha de Contratación" optional="hide" width="170"/>
        <field name="refuse_date" string="Fecha de Rechazo" optional="hide" width="170"/>
        <field name="process_duration" string="Duración" optional="hide" width="120"/>
        <field name="refuse_reason_id" string="Motivo de Rechazo" optional="hide" width="200"/>
        <field name="applicant_notes" string="Comentarios" optional="hide" width="250"/>
        <field name="priority" string="Calificación" optional="hide" widget="priority" width="100"/>
      </list>
    </field>
  </record>

  <!-- Acción para la vista personalizada -->
  <record id="action_hr_applicant_list_custom" model="ir.actions.act_window">
    <field name="name">Informe General de Candidatos</field>
    <field name="res_model">hr.applicant</field>
    <field name="view_mode">list,form</field>
    <field name="view_id" ref="hr_applicant_list_custom"/>
    <field name="context">{}</field>
  </record>

  <!-- Menú dentro de Reporting -->
  <menuitem id="menu_hr_applicant_list_custom"
          name="Informe General"
          parent="hr_recruitment.report_hr_recruitment"
          action="action_hr_applicant_list_custom"
          sequence="100"/>
</odoo>