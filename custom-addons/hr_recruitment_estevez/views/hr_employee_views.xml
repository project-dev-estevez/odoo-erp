<odoo>
  <record id="view_employee_form_inherit" model="ir.ui.view">
    <field name="name">hr.employee.form.inherit</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">      

      <!-- Insertar los nombres separados antes del grupo "Citizenship" en Private Information -->
      <xpath expr="//page[@name='personal_information']//group[group[@string='Private Contact']]" position="before">
        <group string="Nombre desglosado">
          <field name="first_name" placeholder="Nombre(s)"/>
          <field name="last_name" placeholder="Apellido Paterno"/>
          <field name="mother_last_name" placeholder="Apellido Materno"/>
        </group>
      </xpath>
      
    </field>
  </record>
</odoo>
