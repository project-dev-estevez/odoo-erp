<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="hr_recruitment_estevez.RecruitmentSourcesChart" owl="1">
        <div class="recruitment-sources-chart">

            <!-- Loading spinner -->
            <div t-if="state.isLoading" class="text-center py-5">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="text-muted mb-0">Cargando fuentes de reclutamiento...</p>
            </div>

            <!-- Contenido principal -->
            <div t-else="" class="row g-3">
                <!-- Gr√°fico Polar Area -->
                <div class="col-12 col-lg-7">
                    <div class="bg-white rounded shadow-sm">
                        <div t-if="state.hasData">
                            <!-- ‚úÖ USAR CHARTRENDERAPEX -->
                            <ChartRendererApex 
                                type="'pie'" 
                                config="state.apexConfig"
                                height="props.height || 400" 
                                t-key="state.chartKey" />
                        </div>
                        <div t-else="" class="text-center py-5">
                            <i class="fa fa-chart-pie fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">Sin datos disponibles</h5>
                            <p class="text-muted mb-0">No hay fuentes de reclutamiento en el rango seleccionado</p>
                        </div>
                    </div>
                </div>

                <!-- Tabla de indicadores -->
                <div class="col-12 col-lg-5">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-0">
                            <div class="table-responsive"
                                style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-hover mb-0 small">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="border-0 py-3">Fuente</th>
                                            <th class="border-0 text-center py-3">Contratados</th>
                                            <th class="border-0 text-center py-3">Efectividad</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t
                                            t-if="state.indicatorsSourceRecruitment.sources.length > 0">
                                            <t t-foreach="state.indicatorsSourceRecruitment.sources"
                                                t-as="item" t-key="item.label">
                                                <tr style="cursor: pointer;"
                                                    t-on-click="() => this.openSourceRecruitmentList(item.id)"
                                                    class="border-bottom">
                                                    <td class="py-3">
                                                        <div>
                                                            <div class="fw-semibold text-dark"
                                                                t-esc="item.label" />
                                                        </div>
                                                    </td>
                                                    <td class="text-center py-3">
                                                        <span class="badge bg-success fs-6"
                                                            t-esc="item.hired" />
                                                    </td>
                                                    <td class="text-center py-3">
                                                        <span class="fw-bold fs-6"
                                                            t-att-class="getPercentageClass(item.percentage)">
                                                            <t t-esc="item.percentage" />% </span>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <tr>
                                                <td colspan="3" class="text-center text-muted py-5">
                                                    <div>
                                                        <i class="fa fa-info-circle fa-2x mb-2"></i>
                                                        <div>No hay datos disponibles</div>
                                                    </div>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- üí° TIP -->
                <div class="mt-5">
                    <div class="alert alert-info border-0 shadow-sm">
                        <div class="d-flex align-items-start">
                            <i class="fa fa-lightbulb me-3 mt-1 text-primary"></i>
                            <div>
                                <strong>üí° Tips:</strong>
                                <div class="mt-1 small">
                                    <p class="mb-2">Analiza r√°pidamente qu√© fuentes de reclutamiento generan m√°s contrataciones al comparar el n√∫mero total de contratados y su porcentaje de efectividad.</p>
                                    <!-- <p class="mb-2">Observa los colores de la gr√°fica y su correspondencia en la tabla para identificar las fuentes con mejor desempe√±o.</p> -->
                                    <p class="mb-0">Haz clic sobre una secci√≥n o fila para explorar los candidatos provenientes de cada fuente.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>