<templates xml:space="preserve">
    <t t-name="hr_recruitment_estevez.RecruitmentFunnelChart" owl="1">
        <div class="recruitment-funnel-chart">
            
            <!-- üé™ T√çTULO PRINCIPAL -->
            <div class="d-flex align-items-center justify-content-center mt-4 mb-4">
                <h3 class="text-primary text-center fw-bold">
                    <i class="fa fa-filter me-2"></i>
                    <t t-esc="props.title || 'Embudo de Reclutamiento por Puesto de Trabajo Solicitado'"/>
                </h3>
            </div>

            <!-- üîÑ LOADING SPINNER -->
            <div t-if="state.isLoading" class="d-flex justify-content-center align-items-center" style="height: 300px;">
                <div class="text-center">
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="text-muted">Cargando datos del embudo...</p>
                </div>
            </div>

            <!-- üìä CONTENIDO PRINCIPAL -->
            <div t-if="!state.isLoading" class="row">
                
                <!-- üîç COLUMNA IZQUIERDA: SELECTOR Y M√âTRICAS -->
                <div class="col-lg-4 col-md-12">
                    <div class="m-2 p-4">
                        
                        <!-- üéØ SELECTOR DE VACANTE -->
                        <div class="mb-4">
                            <h5 class="text-secondary mb-3">
                                <i class="fa fa-search me-2"></i>
                                Filtrar por Puesto de Trabajo
                            </h5>
                            
                            <div class="position-relative">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa fa-briefcase text-muted"></i>
                                    </span>
                                    <input type="text"
                                        class="form-control"
                                        placeholder="Buscar vacante..."
                                        autocomplete="off"
                                        aria-autocomplete="list"
                                        aria-controls="vacancy-autocomplete-list"
                                        t-on-focus="onVacancyInputFocus"
                                        t-on-blur="onVacancyInputBlur"
                                        t-on-input="onVacancySearchInput"
                                        t-model="state.vacancySearchText"
                                    />
                                    <button class="btn btn-outline-secondary"
                                        type="button"
                                        t-if="state.vacancySearchText and state.vacancySearchText !== 'Todas Las Vacantes'"
                                        t-on-mousedown.prevent="clearVacancySearch"
                                        title="Limpiar b√∫squeda">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </div>

                                <!-- üìã DROPDOWN DE VACANTES -->
                                <div
                                    class="list-group position-absolute w-100 shadow-lg"
                                    id="vacancy-autocomplete-list"
                                    t-if="state.isVacancyDropdownOpen and state.filteredVacancyOptions.length"
                                    style="z-index: 1050; max-height: 250px; overflow-y: auto; border-radius: 0.375rem; background-color: #fff;">
                                    
                                    <!-- Opci√≥n "Todas las vacantes" -->
                                    <button type="button"
                                        class="list-group-item list-group-item-action d-flex align-items-center"
                                        t-on-mousedown="() => selectVacancy(false)">
                                        <i class="fa fa-globe text-primary me-2"></i>
                                        <span class="text-muted fw-bold">Todos los Puestos de Trabajo</span>
                                    </button>
                                    
                                    <!-- Lista de vacantes filtradas -->
                                    <button type="button"
                                        t-foreach="state.filteredVacancyOptions"
                                        t-as="vacancy"
                                        t-key="vacancy.id"
                                        class="list-group-item list-group-item-action d-flex align-items-center"
                                        t-on-mousedown="() => selectVacancy(vacancy)">
                                        <i class="fa fa-briefcase text-success me-2"></i>
                                        <span t-esc="vacancy.name"/>
                                    </button>
                                </div>
                                
                                <!-- ‚ö†Ô∏è Sin opciones -->
                                <div t-if="state.isVacancyDropdownOpen and !state.filteredVacancyOptions.length"
                                    class="position-absolute w-100 bg-white border shadow-sm p-3 text-center text-muted"
                                    style="z-index: 1050; border-radius: 0.375rem;">
                                    <i class="fa fa-search me-2"></i>
                                    No se encontraron vacantes
                                </div>
                            </div>
                        </div>

                        <!-- üìä M√âTRICAS DE LA VACANTE -->
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-light border-0">
                                <h6 class="card-title mb-0 text-dark">
                                    <i class="fa fa-chart-line me-2 text-primary"></i>
                                    M√©tricas del Puesto de Trabajo Solicitado
                                </h6>
                            </div>
                            <div class="card-body">
                                
                                <!-- Estado -->
                                <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                                    <span class="text-muted">
                                        <i class="fa fa-info-circle me-1"></i>
                                        Estado:
                                    </span>
                                    <span t-attf-class="badge {{ state.vacancyMetrics.status === 'Abierta' ? 'bg-success' : state.vacancyMetrics.status === 'Cerrada' ? 'bg-danger' : 'bg-secondary' }}">
                                        <t t-esc="state.vacancyMetrics.status"/>
                                    </span>
                                </div>

                                <!-- Duraci√≥n -->
                                <div t-if="state.vacancyMetrics.openDuration || state.vacancyMetrics.openDate" 
                                    class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                                    <span class="text-muted">
                                        <i class="fa fa-calendar me-1"></i>
                                        Apertura:
                                    </span>
                                    <div class="text-end">
                                        <div t-if="state.vacancyMetrics.openDate" class="fw-bold text-primary">
                                            <span t-esc="state.vacancyMetrics.openDate"/>
                                        </div>
                                        <div t-if="state.vacancyMetrics.openDuration" class="small text-muted">
                                            Hace <span t-esc="state.vacancyMetrics.openDuration"/>
                                        </div>
                                    </div>
                                </div>

                                <!-- N√∫mero de vacantes solicitadas -->
                                <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                                    <span class="text-muted">
                                        <i class="fa fa-list-ol me-1"></i>
                                        N√∫mero de vacantes solicitadas:
                                    </span>
                                    <span class="fw-bold text-dark" t-esc="state.vacancyMetrics.requestedPositions"/>
                                </div>

                                <!-- Postulaciones -->
                                <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                                    <span class="text-muted">
                                        <i class="fa fa-users me-1"></i>
                                        Postulaciones:
                                    </span>
                                    <span class="fw-bold text-primary" t-esc="state.vacancyMetrics.applicants"/>
                                </div>

                                <!-- Contratados -->
                                <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                                    <span class="text-muted">
                                        <i class="fa fa-check-circle me-1"></i>
                                        Contratados:
                                    </span>
                                    <div class="text-end">
                                        <span class="fw-bold text-success" t-esc="state.vacancyMetrics.hired"/>
                                        <div class="small text-muted" t-if="state.vacancyMetrics.hiredFromPrevious > 0">
                                            <i class="fa fa-history me-1"></i>
                                            + <span t-esc="state.vacancyMetrics.hiredFromPrevious"/> del per√≠odo anterior
                                        </div>
                                        <div class="small text-info fw-bold" t-if="state.vacancyMetrics.hiredFromPrevious > 0">
                                            Total: <span t-esc="state.vacancyMetrics.hired + state.vacancyMetrics.hiredFromPrevious"/>
                                        </div>
                                    </div>
                                </div>

                                <!-- Rechazados -->
                                <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                                    <span class="text-muted">
                                        <i class="fa fa-times-circle me-1"></i>
                                        Rechazados:
                                    </span>
                                    <span class="fw-bold text-danger" t-esc="state.vacancyMetrics.refused"/>
                                </div>

                                <!-- Motivo principal de rechazo -->
                                <!-- <div t-if="state.vacancyMetrics.topRefuseReason" 
                                    class="mt-2">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fa fa-exclamation-triangle me-2 text-warning"></i>
                                        <span class="text-muted small">Principal motivo de rechazo:</span>
                                    </div>
                                    <div class="border-start border-warning border-3 ps-3">
                                        <span class="text-wrap fw-semibold text-dark" 
                                            t-esc="state.vacancyMetrics.topRefuseReason"/>
                                    </div>
                                </div> -->
                            </div>
                        </div>
                    </div>
                </div>

                <!-- üé™ COLUMNA DERECHA: GR√ÅFICO DEL EMBUDO (APEX CHART) -->
                <div class="col-lg-8 col-md-12">
                    <div class="m-2">
                        
                        <!-- ‚úÖ GR√ÅFICO CON DATOS -->
                        <div t-if="state.hasData" class="card border-0 shadow-sm">
                            <div class="card-body p-4">
                                <!-- ‚úÖ APEX CHART RENDERER -->
                                <ChartRendererApex 
                                    t-key="state.chartKey"
                                    config="state.apexConfig"
                                    height="props.height || 400"
                                />
                            </div>
                        </div>

                        <!-- ‚ö†Ô∏è SIN DATOS -->
                        <div t-if="!state.hasData" class="card border-0 shadow-sm">
                            <div class="card-body text-center py-5">
                                <div class="mb-4">
                                    <i class="fa fa-chart-pie fa-4x text-muted opacity-50"></i>
                                </div>
                                <h5 class="text-muted mb-3">No hay datos disponibles</h5>
                                <p class="text-secondary">
                                    No se encontraron postulaciones para el per√≠odo seleccionado
                                    <span t-if="state.selectedVacancy"> en esta vacante</span>.
                                </p>
                                <button class="btn btn-outline-primary btn-sm" t-on-click="refresh">
                                    <i class="fa fa-refresh me-1"></i>
                                    Intentar nuevamente
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- üí° AYUDA CONTEXTUAL -->
            <div t-if="!state.isLoading" class="row mt-3">
                <div class="col-12">
                    <div class="alert alert-info border-0 shadow-sm mx-2">
                        <div class="d-flex align-items-start">
                            <i class="fa fa-lightbulb me-3 mt-1 text-primary"></i>
                            <div>
                                <strong>üí° Tip:</strong>
                                <ul class="mb-0 mt-2">
                                    <li>Haz clic en cualquier secci√≥n del gr√°fico para ver las postulaciones de esa etapa</li>
                                    <li>Selecciona una vacante espec√≠fica para ver m√©tricas detalladas</li>
                                    <li>Las m√©tricas se actualizan autom√°ticamente al cambiar las fechas</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>