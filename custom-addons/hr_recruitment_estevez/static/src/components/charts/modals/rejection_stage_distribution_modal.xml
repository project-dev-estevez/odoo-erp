<t t-name="hr_recruitment_estevez.RejectionStageDistributionModal" owl="1">
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fa fa-chart-bar me-2 text-primary"></i>
                        <t t-esc="state.title"/>
                    </h5>
                    <button type="button" class="btn-close" t-on-click="onCloseModal"></button>
                </div>
                <div class="modal-body">
                    <div t-if="state.isLoading" class="text-center py-5">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p class="mt-3 text-muted">Cargando distribuci√≥n por etapa...</p>
                    </div>
                    <div t-elif="!hasData" class="text-center py-5">
                        <i class="fa fa-inbox fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">Sin datos para mostrar</h4>
                        <p class="text-muted">No hay rechazos/declinaciones en etapas posteriores a "Primer Contacto".</p>
                    </div>
                    <div t-else="">
                        <ChartRendererApex config="state.chartConfig" type="'bar'" height="350"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" t-on-click="onCloseModal">
                        <i class="fa fa-times me-1"></i>
                        Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
</t>